<% include ../partials/header %>

<div class="row">
	<div class="col-md-4">
		<h1><%= user.firstName + " " + user.lastName %></h1>
		<div class="thumbnail">
			<img src="<%= user.avatar %>" alt="user profile image">
			<div class="caption"><a href="mailto: <%= user.email %>"><%= user.email %></a></div>
		</div>
		<div>
			Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna 			aliqua. Ut consequat semper viverra nam libero justo. Sed risus pretium quam vulputate dignissim suspendisse.
		</div>
	</div>
	<div class="col-md-8">
	<h3><%= user.username %>'s posts</h3>
	<ul>
		<% places.forEach(function(place) { %>
		<li><a href="/places/<%= place.id %>"><%= place.name %></a></li>
		<% }); %>
	</ul>
	</div>
</div>

<% include ../partials/footer %>
